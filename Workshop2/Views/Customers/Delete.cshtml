<div>
    <h4>Klient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surename)
        </dd>
        <dt class = "col-sm-2">
